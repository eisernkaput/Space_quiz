<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>
    <!-- Style of checkboxes, radio buttons and edit text fields -->
    <style name="answerZone" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/answer</item>
    </style>

    <!-- Style of question headings -->
    <style name="headings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_secondary</item>


    </style>

    <!-- Style of question description -->
    <style name="questionDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@drawable/rounded</item>



    </style>

    <!-- Style of images -->
    <style name="questionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>
